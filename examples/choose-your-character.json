{
    "location": "choose-your-character",
    "base encoding file": "data/asp/one-to-one-assoc.lp",
    "shows": "assoc/2",

    "users options": {
        "type": "restricted",
        "description": "Qui êtes-vous ?",
        "allowed": ["Pierre", "David", "Noémie", "Noa"]
    },
    "choices options": {
        "default": "all",
        "type": "multiple",
        "description": "Indiquez les personnages que vous accepteriez de jouer (au moins 1) :",
        "choices": ["Méléas", "Éléa", "Haringer", "Ina"],
        "data atoms": [
            "user({user})",
            "choice({choice})"
        ],
        "produced atoms": "ok({user},{choice})"
    },
    "output options": {
        "model repr": "raw"
    }
}
